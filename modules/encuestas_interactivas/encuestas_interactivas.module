    'encuestas_interactivas_resultados' => [
      'variables' => [
        'encuesta_title' => NULL,
        'result_count' => [],
        'percentages' => [],
      ],
    ],
    'respuestas_block' => [
      'variables' => [
        'encuesta_title' => NULL,
        'result_count' => [],
        'percentages' => [],
      ],
    ],
  ];
}